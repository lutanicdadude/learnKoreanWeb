generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model stored_words {
  id        Int      @id @default(autoincrement())
  kor_word  String
  eng_word  String
  category  String
  createdAt DateTime @default(now())

  audios Audio[]
}

model Audio {
  id        Int      @id @default(autoincrement())
  wordId    Int
  voice     String
  audioData Bytes?
  createdAt DateTime @default(now())

  word stored_words @relation(fields: [wordId], references: [id])
}
